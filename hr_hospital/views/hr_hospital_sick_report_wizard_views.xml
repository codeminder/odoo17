<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for the Sick Report Wizard -->
    <record id="hr_hospital_sick_report_wizard_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.sick.report.wizard.form</field>
        <field name="model">hr_hospital.sick_report_wizard</field>
        <field name="arch" type="xml">
            <form string="Monthly Sick Report Wizard">
                <group>
                    <field name="year"/>
                    <field name="month"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="action_generate_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Tree View for the Sick Report -->
    <record id="hr_hospital_view_sick_report_tree" model="ir.ui.view">
        <field name="name">hr.hospital.sick.report.tree</field>
        <field name="model">hr_hospital.sick_report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sick_id"/>
                <field name="diagnosis_count"/>
            </tree>
        </field>
    </record>
</odoo>
