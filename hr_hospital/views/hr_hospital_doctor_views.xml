<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_doctor_weekly_schedule_wizard_action" model="ir.actions.act_window">
        <field name="name">Doctor Weekly Schedule Wizard</field>
        <field name="res_model">hr_hospital.doctor_weekly_schedule_wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="hr_hospital_doctor_view_tree" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.tree</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="specialization"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_doctor_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.form</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                    <group>
                        <field name="photo" widget="image" class="oe_avatar"/>
                    </group>
                    <group>
                        <field name="first_name"/>
                        <field name="last_name"/>
                    </group>
                    <group>
                        <field name="specialization"/>
                    </group>
                    <group>
                        <field name="phone"/>
                        <field name="email"/>
                    </group>
                    <group>
                        <field name="is_intern"/>
                        <field name="mentor_id"/>
                    </group>
                    <group>
                        <xpath expr="//form/sheet" position="inside">
                            <button name="%(hr_hospital_doctor_weekly_schedule_wizard_action)d" string="Doctor Weekly Scedule" type="action" class="oe_highlight"/>
                        </xpath>
                    </group>
                    
                    <!-- Mentor information (if the doctor is an intern) -->
                    <group string="Mentor" conditions="{'invisible': [('is_intern', '=', False)]}">
                        <field name="mentor_id"/>
                    </group>

                    <!-- Intern information (if there are any interns) -->
                    <group string="Interns" conditions="{'invisible': [('is_intern', '=', False)]}">
                        <field name="intern_ids">
                            <kanban>
                                <field name="first_name"/>
                                <field name="last_name"/>
                                <field name="photo" widget="image"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div class="oe_kanban_details">
                                            <strong>
                                                <field name="first_name"/> <field name="last_name"/>
                                            </strong>
                                            <div>
                                                <field name="specialization"/>
                                            </div>
                                            <div>
                                                <field name="photo" widget="image"/>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </group>
            </form>
        </field>
    </record>
</odoo>
