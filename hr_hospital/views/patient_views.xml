<odoo>
    <record id="view_tree_hr_hospital_patient" model="ir.ui.view">
        <field name="name">hr_hospital.patient.tree</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="last_name"/>
                <field name="birth_date"/>
                <field name="age"/>
                <field name="passport_data"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="contact_person_id"/>
                <field name="doctor_id"/>
            </tree>
        </field>
    </record>

    <record id="view_form_hr_hospital_patient" model="ir.ui.view">
        <field name="name">hr.hospital.patient.form</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="first_name"/>
                    <field name="last_name"/>
                </group>
                <group>
                    <field name="birth_date"/>
                    <field name="age"/>
                </group>
                <group>
                    <field name="passport_data"/>
                </group>
                <group>
                    <field name="contact_person_id"/>
                    <field name="doctor_id"/>
                </group>
                <group>
                    <field name="photo" widget="image" class="oe_avatar"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
