<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Define the Hospital Management menu -->
    <menuitem id="hr_hospital_management_menu" name="Hospital Management" sequence="1"/>
    
    <!-- Define action for Patients -->
    <record id="hr_hospital_patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hr_hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Define action for Doctors -->
    <record id="hr_hospital_doctor_action" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hr_hospital.doctor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Define action for Sicks -->
    <!-- <record id="hr_hospital_sick_action" model="ir.actions.act_window">
        <field name="name">Sicks</field>
        <field name="res_model">hr_hospital.sick</field>
        <field name="view_mode">tree,form</field>
    </record> -->

    <!-- Define action for Appointments -->
    <record id="hr_hospital_appointment_action" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hr_hospital.appointment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Action for Diagnosis -->
    <record id="hr_hospital_diagnosis_action" model="ir.actions.act_window">
        <field name="name">Diagnosis</field>
        <field name="res_model">hr_hospital.diagnosis</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Action for calendar of appointments for doctors -->
    <record id="hr_hospital_doctor_appointments_calendar_action" model="ir.actions.act_window">
        <field name="name">Doctor Appointments</field>
        <field name="res_model">hr_hospital.appointment</field>
        <field name="view_mode">calendar,tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new appointment.
            </p>
        </field>
    </record>

    <!-- The action for diagnosis pivot report -->
    <record id="hr_hospital_diagnosis_pivot_action" model="ir.actions.act_window">
        <field name="name">Diagnosis Pivot</field>
        <field name="res_model">hr_hospital.diagnosis</field>
        <field name="view_mode">pivot</field>
        <field name="context">{}</field>
    </record>

    <!-- The action for diagnosis graph -->
    <record id="hr_hospital_diagnosis_graph_action" model="ir.actions.act_window">
        <field name="name">Diagnosis</field>
        <field name="res_model">hr_hospital.diagnosis</field>
        <field name="view_mode">graph</field>
    </record>

    <record id="hr_hospital_analysis_action" model="ir.actions.act_window">
        <field name="name">Medical Analyses</field>
        <field name="res_model">hr_hospital.analysis</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first medical analysis</p>
        </field>
    </record>
    
    <!-- Define action for Sicks with Search-->
    <record id="hr_hospital_sick_action" model="ir.actions.act_window">
        <field name="name">Diseases</field>
        <field name="res_model">hr_hospital.sick</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="hr_hospital_sick_view_search"/>
    </record>

    <!-- Link the actions to menu items -->
    <menuitem id="hr_hospital_patient_menu" name="Patients" parent="hr_hospital_management_menu" action="hr_hospital_patient_action"/>
    <menuitem id="hr_hospital_doctor_menu" name="Doctors" parent="hr_hospital_management_menu" action="hr_hospital_doctor_action"/>
    <menuitem id="hr_hospital_sick_menu" name="Sicks" parent="hr_hospital_management_menu" action="hr_hospital_sick_action"/>
    <menuitem id="hr_hospital_appointment_menu" name="Appointments" parent="hr_hospital_management_menu" action="hr_hospital_appointment_action"/>
    <menuitem id="hr_hospital_diagnosis_menu" name="Diagnosis" parent="hr_hospital_management_menu" action="hr_hospital_diagnosis_action"/>
    <menuitem id="hr_hospital_doctor_appointments_calendar_menu" name="Doctor Appointments Calendar" 
        parent="hr_hospital_management_menu" action="hr_hospital_doctor_appointments_calendar_action"/>
    
    <!-- New "Reporting" Menu in the "Hospital" Module -->
    <menuitem id="hospital_reporting_menu" name="Reporting" parent="hr_hospital_management_menu" sequence="30"/>
    <menuitem id="sick_report_wizard_menu" name="Monthly Sick Report" parent="hospital_reporting_menu" action="hr_hospital_sick_report_wizard_action"/>

    <menuitem id="hr_hospital_hospital_diagnosis_pivot_menu" name="Diagnosis Pivot"
        parent="hospital_reporting_menu" action="hr_hospital_diagnosis_pivot_action"/>
    
    <menuitem id="hr_hospital_hospital_diagnosis_graph_menu"
          name="Diagnosis Graph"
          parent="hospital_reporting_menu"
          action="hr_hospital_diagnosis_graph_action"/>

    <menuitem id="hr_hospital_analysis_menu"
            name="Medical Analyses"
            parent="hr_hospital_management_menu"
            action="hr_hospital_analysis_action"/>

</odoo>
