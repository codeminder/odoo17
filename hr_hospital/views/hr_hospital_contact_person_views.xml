<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_contact_person_tree" model="ir.ui.view">
        <field name="name">hr.hospital.contact.person.tree</field>
        <field name="model">hr_hospital.contact_person</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="relationship"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="view_contact_person_form" model="ir.ui.view">
        <field name="name">hr.hospital.contact.person.form</field>
        <field name="model">hr_hospital.contact_person</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="first_name"/>
                    <field name="last_name"/>
                </group>
                <group>
                    <field name="relationship"/>
                </group>
                <group>
                    <field name="phone"/>
                    <field name="email"/>
                </group>
                <group>
                    <field name="photo" widget="image" class="oe_avatar"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
