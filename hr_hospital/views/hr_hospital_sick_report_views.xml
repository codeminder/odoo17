<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action to Open the Sick Report Wizard -->
    <record id="hr_hospital_sick_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Monthly Sick Report</field>
        <field name="res_model">hr_hospital.sick_report_wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hr_hospital_sick_report_wizard_view_form"/>
        <field name="target">new</field>
    </record>

    <!-- Button in "Print" Menu of Doctor Form and List Views -->
    <record id="hr_hospital_doctor_inherit_form_view" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.form.inherit</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="inherit_id" ref="hr_hospital_doctor_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/group" position="inside">
                <button name="%(hr_hospital_sick_report_wizard_action)d" string="Monthly Sick Report" type="action" class="oe_highlight"/>
            </xpath>
        </field>
    </record>

    <!-- New "Reporting" Menu in the "Hospital" Module -->
    <menuitem id="hospital_reporting_menu" name="Reporting" parent="hr_hospital_management_menu" sequence="30"/>
    <menuitem id="sick_report_wizard_menu" name="Monthly Sick Report" parent="hospital_reporting_menu" action="hr_hospital_sick_report_wizard_action"/>
</odoo>
