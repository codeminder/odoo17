<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_sick_view_form" model="ir.ui.view">
        <field name="name">hr_hospital.sick.form</field>
        <field name="model">hr_hospital.sick</field>
        <field name="arch" type="xml">
            <form string="Sickness">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="parent_id" options="{'hierarchical': True}"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <group string="Secondary sicks">
                        <field name="child_ids">
                            <tree>
                                <field name="name"/>
                                <field name="description"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_sick_view_tree" model="ir.ui.view">
        <field name="name">hr_hospital.sick.tree</field>
        <field name="model">hr_hospital.sick</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_sick_view_search" model="ir.ui.view">
        <field name="name">hr.hospital.sick.search</field>
        <field name="model">hr_hospital.sick</field>
        <field name="arch" type="xml">
            <search string="Search Sick">
                <field name="name"/>
                <field name="parent_id"/>
                <!-- <filter string="Root Sicks" domain="[('parent_id', '=', False)]"/> -->
            </search>
        </field>
    </record>

</odoo>
