<odoo>
    <record id="view_form_hr_hospital_doctor" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.form</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="specialization"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_hr_hospital_doctor" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.tree</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="specialization"/>
            </tree>
        </field>
    </record>
</odoo>
