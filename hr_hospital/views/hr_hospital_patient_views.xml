<?xml version="1.0" encoding="utf-8"?>
<odoo>  
    <!-- Action definition for the wizard -->
    <record id="hr_hospital_mass_doctor_reassignment_wizard_action" model="ir.actions.act_window">
        <field name="name">Mass Reassign Doctor</field>
        <field name="res_model">hr_hospital.mass_doctor_reassignment_wizard</field>
        <field name="view_mode">form</field>
        <!-- <field name="view_id" ref="hr_hospital.view_mass_doctor_reassignment_wizard_form"/> -->
        <field name="target">new</field>
        <!-- Context to pass the patient IDs to the wizard -->
        <field name="context">{'default_patient_ids': records.ids}</field>
    </record>
    
    <record id="hr_hospital_patient_view_tree" model="ir.ui.view">
        <field name="name">hr_hospital.patient.tree</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="last_name"/>
                <field name="birth_date"/>
                <field name="age"/>
                <field name="passport_data"/>
                <field name="gender"/>
                <field name="contact_person_id"/>
                <field name="doctor_id"/>
                <header>
                    <button string="Mass Reassign Doctor"
                            type="action"
                            name="%(hr_hospital_mass_doctor_reassignment_wizard_action)d"
                            class="btn btn-primary open_wizard_action"
                            />                            
                </header>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_patient_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.patient.form</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="first_name"/>
                    <field name="last_name"/>
                </group>
                <group>
                    <field name="birth_date"/>
                    <field name="age"/>
                </group>
                <group>
                    <field name="passport_data"/>
                </group>
                <group>
                    <field name="contact_person_id"/>
                    <field name="doctor_id"/>
                </group>
                <group>
                    <field name="photo" widget="image" class="oe_avatar"/>
                </group>
                <group>
                    <field name="diagnosis_ids">
                        <tree>
                            <field name="sick_id"/>
                            <field name="doctor_id"/>
                            <field name="diagnosis_date"/>
                        </tree>
                    </field>
                </group>
                <group>
                    <field name="appointment_ids">
                        <tree>
                            <field name="doctor_id"/>
                            <field name="appointment_date"/>
                        </tree>
                    </field>
                </group>
                <!-- Buttons to show history -->
                <group>
                    <button name="action_show_visit_history" string="Історія відвідувань" type="object" class="btn-primary"/>
                    <button name="action_show_treatment_history" string="Історія призначень" type="object" class="btn-primary"/>
                    <button name="action_show_tests_history" string="Історія аналізів" type="object" class="btn-primary"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
