<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Diagnosis -->
    <record id="hr_hospital_diagnosis_view_tree" model="ir.ui.view">
        <field name="name">hr.hospital.diagnosis.tree</field>
        <field name="model">hr_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <tree>
                <field name="diagnosis_date"/>
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="sick_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Diagnosis -->
    <record id="hr_hospital_diagnosis_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.diagnosis.form</field>
        <field name="model">hr_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="diagnosis_date"/>
                    <field name="doctor_id"/>
                    <field name="patient_id"/>
                    <field name="sick_id"/>
                </group>
                <group>
                    <field name="treatment"/>
                </group>
                <group>
                    <field name="mentor_comment" modifiers='{"isVisible": "state.isIntern"}'/>
                </group>
            </form>
        </field>
    </record>

    <!-- Pivot view for diagnosis -->
    <record id="hr_hospital_diagnosis_view_pivot" model="ir.ui.view">
        <field name="name">hr.hospital.diagnosis.pivot</field>
        <field name="model">hr_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <pivot string="Diagnosis Analysis" display_quantity="1">
                <!-- Rows: Group by sick_id and disease type -->
                <field name="sick_parent_id" type="row"/>
                <field name="sick_id" type="row"/>
                
                <!-- Columns: Group by year and month of appointment -->
                <field name="diagnosis_date" interval="year" type="col"/>
                <field name="diagnosis_date" interval="month" type="col"/>
                
                <!-- Measure: The count of diagnoses -->
            </pivot>
        </field>
    </record>

    <!-- Graph of diagnosis -->
    <record id="hr_hospital_diagnosis_view_graph" model="ir.ui.view">
        <field name="name">hr.hospital.diagnosis.graph</field>
        <field name="model">hr_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <graph string="Diagnosis by Sick Type and Month" type="bar">
                <!-- Grouping data by Sick -->
                <field name="sick_id" type="row" string="Sick"/>
                <!-- Grouping data by month of the appointment -->
                <field name="diagnosis_date" type="col" interval="month" string="Month"/>
                <!-- Measure field to count the number of diagnoses -->
            </graph>
        </field>
    </record>

</odoo>
