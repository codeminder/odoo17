<odoo>
    <record id="view_form_hr_hospital_appointment" model="ir.ui.view">
        <field name="name">hr_hospital.appointment.form</field>
        <field name="model">hr_hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="appointment_date"/>
                        <field name="sickness_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_hr_hospital_appointment" model="ir.ui.view">
        <field name="name">hr_hospital.appointment.tree</field>
        <field name="model">hr_hospital.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="appointment_date"/>
            </tree>
        </field>
    </record>
</odoo>
