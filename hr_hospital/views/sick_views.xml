<odoo>
    <record id="view_form_hr_hospital_sick" model="ir.ui.view">
        <field name="name">hr_hospital.sick.form</field>
        <field name="model">hr_hospital.sick</field>
        <field name="arch" type="xml">
            <form string="Sickness">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="parent_id"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <group string="Secondary sicks">
                        <field name="child_ids">
                            <tree>
                                <field name="name"/>
                                <field name="description"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_hr_hospital_sick" model="ir.ui.view">
        <field name="name">hr_hospital.sick.tree</field>
        <field name="model">hr_hospital.sick</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
</odoo>
