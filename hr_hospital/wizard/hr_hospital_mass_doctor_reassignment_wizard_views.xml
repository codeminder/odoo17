<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_mass_doctor_reassignment_wizard_view_form" model="ir.ui.view">
        <field name="name">mass.doctor.reassignment.wizard.form</field>
        <field name="model">hr_hospital.mass_doctor_reassignment_wizard</field>
        <field name="arch" type="xml">
            <form string="Mass Reassign Doctor">
                <group>
                    <field name="new_doctor_id" options="{'no_open': True}" />
                    <field name="patient_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}" />
                </group>
                <footer>
                    <button string="Reassign Doctor" type="object" name="action_reassign_doctor" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
