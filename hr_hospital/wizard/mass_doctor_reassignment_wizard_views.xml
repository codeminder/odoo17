<odoo>
    <record id="view_mass_doctor_reassignment_wizard_form" model="ir.ui.view">
        <field name="name">mass.doctor.reassignment.wizard.form</field>
        <field name="model">hr_hospital.mass_doctor_reassignment_wizard</field>
        <field name="arch" type="xml">
            <form string="Mass Reassign Personal Doctor">
                <group>
                    <field name="new_doctor_id"/>
                </group>
                <footer>
                    <button string="Reassign" type="object" name="action_reassign_doctor" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
