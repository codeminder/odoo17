<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_doctor_weekly_schedule_wizard_view_form" model="ir.ui.view">
        <field name="name">doctor.weekly.schedule.wizard.form</field>
        <field name="model">hr_hospital.doctor_weekly_schedule_wizard</field>
        <field name="arch" type="xml">
            <form string="Doctor Weekly Schedule">
                <group>
                    <field name="doctor_id"/>
                    <field name="week_type"/>
                </group>
                <group colspan="2">
                    <field name="monday_start"/>
                    <field name="monday_end"/>
                    <field name="tuesday_start"/>
                    <field name="tuesday_end"/>
                    <field name="wednesday_start"/>
                    <field name="wednesday_end"/>
                    <field name="thursday_start"/>
                    <field name="thursday_end"/>
                    <field name="friday_start"/>
                    <field name="friday_end"/>
                    <field name="saturday_start"/>
                    <field name="saturday_end"/>
                    <field name="sunday_start"/>
                    <field name="sunday_end"/>
                </group>
                <footer>
                    <button string="Apply" type="object" name="action_apply_schedule" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

